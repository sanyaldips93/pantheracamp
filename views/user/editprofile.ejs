<% include ../partials/header %>

    <div class="container">
        
        <h2 style="text-align: center">Sign Up!</h2>
        <div style="width:30%; margin:30px auto;">
            <form action="/user/<%=foundUser._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="user[username]" value="<%=foundUser.username%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="user[firstName]" value="<%=foundUser.firstName%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="user[lastName]" value="<%=foundUser.lastName%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="user[image]" value="<%=foundUser.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="email" name="user[email]" value="<%=foundUser.email%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="user[aboutMe]" value="<%=foundUser.aboutMe%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a class="text-center" href="/user/<%=foundUser.id%>">Go Back!</a>
        </div>
       
    </div>

<% include ../partials/footer %>